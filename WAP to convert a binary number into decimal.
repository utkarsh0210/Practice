#include <iostream>
# include <cmath>
using namespace std;

int main()
{
    int n;
    cout<<"Enter the number in binary system :";
    cin>>n;
    int rem,dec=0,i=0;
    while(n!=0)
    {
        rem=n%10;
        n=n/10;
        dec += rem*pow(2,i);
        i++;
    }
    cout<<"Number in decimal form is : "<<dec<<endl;
    return 0;
}
